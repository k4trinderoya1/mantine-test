<svg width="100" height="150" viewBox="0 0 100 150" xmlns="http://www.w3.org/2000/svg">
  <!-- Верхняя часть песочных часов -->
  <path d="M10 10 H90 V60 H10 Z" fill="#f3f3f3" stroke="#000" stroke-width="2"/>
  <!-- Нижняя часть песочных часов -->
  <path d="M10 90 H90 V140 H10 Z" fill="#f3f3f3" stroke="#000" stroke-width="2"/>
  <!-- Песок -->
  <path id="sand" d="M10 60 L90 60 L50 90 Z" fill="#f3c85c"/>
  <!-- Анимация песка -->
  <animateTransform 
    xlink:href="#sand"
    attributeName="transform" 
    type="translate" 
    from="0 0" 
    to="0 30" 
    dur="2s" 
    repeatCount="indefinite"/>
</svg>
